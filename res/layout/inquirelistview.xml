<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#fff"
              android:baselineAligned="false">

    <View
            android:layout_width="5dp"
            android:layout_height="fill_parent"
            android:background="@color/list_item_highlight"
            android:visibility="invisible"
            android:id="@+id/new_item_stripe"/>

    <LinearLayout
            android:id="@+id/left_row"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minHeight="70dp"
                android:orientation="vertical"
                android:gravity="center_vertical">

            <TextView
                    style="@style/TableTextStyle.Title"
                    android:layout_marginBottom="0dp"
                    android:text="aaaaaa"
                    android:id="@+id/company_name"/>

            <TextView
                    style="@style/TableTextStyle"
                    android:text="aaaaaa"
                    android:layout_marginTop="-5dp"
                    android:id="@+id/name"/>

        </LinearLayout>

        <TextView
                style="@style/TableTextStyle"
                android:layout_width="100dp"
                android:id="@+id/attachments"/>

        <TextView
                style="@style/TableTextStyle"
                android:layout_width="100dp"
                android:id="@+id/date"/>


        <TextView
                style="@style/TableTextStyle"
                android:layout_width="100dp"
                android:id="@+id/state"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/right_row"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">

        <View
                android:layout_height="fill_parent"
                android:layout_width="1px"
                android:background="#ddd"/>

        <Button
                android:drawableLeft="@drawable/ic_navigation_accept"
                android:id="@+id/close"
                android:background="@null"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textColor="@color/spinner_background"
                android:textSize="20sp"
                android:text="Uzavřít"/>
    </LinearLayout>
</LinearLayout>