<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomSpinnerStyle" parent="android:style/Widget.ListView.DropDown">
        <item name="android:divider">#52a8ca</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="TableTextStyle">
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TableTextStyle.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="InquiryInfoTableCell">
        <item name="android:layout_margin">15dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="InquiryInfoTableLabel">
        <item name="android:textColor">#666</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <style name="InquiryInfoTableText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
    </style>

    <style name="InquiryInfoTableDivider">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">#666</item>
    </style>

    <style name="CustomTheme" parent="android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:dropDownListViewStyle">@style/CustomSpinnerStyle</item>
    </style>
</resources>